<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.ttran1272.occars.LoanSummaryActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/oc_cars_logo" />

    <TextView
        android:id="@+id/loanSummaryTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/bone_white"
        android:background="@color/steel_blue"
        android:text="@string/loan_summary" />

    <TextView
        android:id="@+id/loanSummaryTextView"
        android:textSize="20sp"
        android:layout_below="@id/loanSummaryTitleTV"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/noteTextView"
        android:textSize="20sp"
        android:layout_below="@id/loanSummaryTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


</RelativeLayout>
